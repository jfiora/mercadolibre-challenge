generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model Inventory {
  id        Int      @id @default(autoincrement())
  sku       String   @unique
  qty       Int
  updatedAt DateTime @updatedAt
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
