{
    // Visit https://aka.ms/tsconfig to read more about this file
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "jsx": "react-jsx"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
